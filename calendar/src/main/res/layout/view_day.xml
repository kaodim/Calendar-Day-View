<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dayHeight">

    <LinearLayout
        android:id="@+id/separate_hour"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f0f0f0"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/rlContent"
        android:layout_below="@+id/separate_hour"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dayHeight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_hour"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="12:00"
            android:textColor="#5e5e5e"
            android:textSize="12sp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <View
        android:id="@+id/viewBottomSeparator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rlContent"
        android:background="#f0f0f0" />

</RelativeLayout>