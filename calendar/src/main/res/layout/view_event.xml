<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_event_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4F5FF">

    <RelativeLayout
        android:id="@+id/rlEventHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingBottom="0dp" />

    <View
        android:id="@+id/viewLeftMargin"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rlEventHeader"
        android:background="#009FF8"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/rlEventContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/viewLeftMargin"
        android:padding="4dp"
        android:layout_toEndOf="@+id/viewLeftMargin">

        <TextView
            android:id="@+id/item_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Janie Warren
0164326948
Bangsar utama"
            android:textColor="#969696"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
